bind 0.0.0.0
port 6379
protected-mode no

daemonize no
supervised systemd

dir /var/lib/redis
dbfilename dump.rdb

appendonly yes
appendfilename appendonly.aof
appendfsync everysec
no-appendfsync-on-rewrite no

cluster-enabled yes
cluster-config-file nodes.conf
cluster-node-timeout 15000
cluster-require-full-coverage yes

maxmemory-policy noeviction

tcp-keepalive 300
timeout 0

